<h1> Page add new course </h1>

<form action="/add" method="post">

    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required>
        <label for="title">Name course</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required>
        <label for="price">Price course</label>
        <span class="helper-text" data-error="Введите цену" min="1"></span>
    </div>

    <div class="input-field">
        <input id="img" type="text" name="img" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL картинки"></span>
    </div>

    <button class="btn btn-primary"> Add course </button>
    <br>
    <br>
    <br>
    <br>

</form>